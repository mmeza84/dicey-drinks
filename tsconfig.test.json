{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "src/**/*.test.*",
    "src/**/*.spec.*"
  ]
}
